2-
SELECT codeV,villeDestination
FROM VOYAGE
Where (durée > 3) AND (prixBillet<100)

3-
Select numC,nom
FROM CLIENT 
    NATURAL JOIN RESERVATION
WHERE DATE_FORMAT(dateRes, '%Y %m') = DATE_FORMAT('2005-11-12', '%Y %m')

4-
SELECT nom,prénom,adresse
FROM CLIENT
    NATURAL JOIN VOYAGE
    NATURAL JOIN RESERVATION
WHERE (villeDestination = "Nice") AND (prixBillet<200)

